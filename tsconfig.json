{
    "compilerOptions": {
        "target": "ES2024",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2024",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    },
    "include": [
        "src/**/*.ts"
    ],
    "allowJS": true
}